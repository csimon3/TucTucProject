<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:id="@+id/about_layout_root"
    android:background="@color/stacked_green"
    android:padding="10dp"
    android:paddingTop="50dp"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher"
        android:layout_row="1"
        android:layout_column="0"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/version"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/createdBy"
        android:text="@string/createdBy"
        android:singleLine="false"
        android:layout_row="0"
        android:layout_column="0"
        android:textColor="@color/white"
        android:gravity="fill_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/version"
        android:id="@+id/version"
        android:layout_row="2"
        android:layout_column="0"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:layout_below="@+id/createdBy"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Licencia : GPL"
        android:id="@+id/textView3"
        android:paddingBottom="50dp"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:layout_below="@+id/version"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/sourceCode"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:autoLink="web"
        android:linksClickable="true"
        android:textColorLink="#fffd56"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>